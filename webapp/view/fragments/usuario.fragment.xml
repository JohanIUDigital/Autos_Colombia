<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="dlgUsuario"
        title="GestiÃ³n de Usuarios"
    >
        <content>
            <smartForm:SmartForm
                id="smfUsuario"
                editable="true"
                app:defaultCheckBoxDisplayBehaviour="OnOff"
                app:defaultDropDownDisplayBehaviour="idAndDescription"
                class="customLabel"
            >
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Crear Usuario"
                                press="onPressCrearUsuario"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Actualizar Usuario"
                                press="onPressActualizarUsuario"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Eliminar Usuario"
                                press="onPressEliminarUsuario"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Consultar Usuarios"
                                press="onPressConsultarUsuario"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
        </content>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press="onCloseUsuario"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
