<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="dlgPago"
        title="GestiÃ³n de Pagos"
    >
        <content>
            <smartForm:SmartForm
                id="smfPago"
                editable="true"
                app:defaultCheckBoxDisplayBehaviour="OnOff"
                app:defaultDropDownDisplayBehaviour="idAndDescription"
                class="customLabel"
            >
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Ingresar Pago"
                                press="onPressIngresarPago"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartForm:elements>
                            <Button
                                text="Historial de pagos"
                                press="onPressHistorialPago"
                                type="Emphasized"
                            />
                        </smartForm:elements>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
        </content>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press="onClosePago"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
